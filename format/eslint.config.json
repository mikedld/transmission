{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "curly": ["error", "all"],
    "no-undef": "off",
    "no-unused-vars": "off",
    "no-var": "off",
    "prefer-const": "off",
    "semi": ["error", "always"]
  }
}
